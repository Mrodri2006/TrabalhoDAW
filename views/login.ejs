<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: white;
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        main {
            background-color: #fff;
            color: #333;
            border-radius: 10px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 380px;
            padding: 40px;
            text-align: center;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.8rem;
        }

        label {
            font-size: 0.9rem;
            margin-bottom: 5px;
            display: block;
            color: #555;
            text-align: left;
        }

        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 15px;
            margin: 10px 0 20px;
            border: 1px solid #ccc;
            border-radius: 6px;
            background-color: #f5f5f5;
            color: #333;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        input[type="email"]:focus,
        input[type="password"]:focus {
            border-color: #28a745;
            background-color: #fff;
        }

        button {
            background-color: #28a745;
            color: #fff;
            padding: 12px;
            font-size: 1rem;
            width: 100%;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        button:hover {
            background-color: #218838;
        }

        button:active {
            background-color: #1e7e34;
        }

        .success-message {
            display: none;
            background-color: #28a745;
            color: #fff;
            padding: 15px;
            border-radius: 6px;
            margin: 20px 0;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        p {
            margin-top: 15px;
            color: #777;
            font-size: 0.9rem;
        }

        p a {
            color: #28a745;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        p a:hover {
            color: #218838;
        }

        @media (max-width: 600px) {
            body {
                padding: 10px;
            }

            main {
                padding: 30px;
                max-width: 100%;
            }
        }
    </style>
</head>

<body>
    <main>
        <img src=".." alt="Logo da shell" style=" height:70px; margin-right: 30px;">
        <h1>Login</h1>
        <div id="successMessage" class="success-message">Logado com sucesso!</div>

        <form id="loginForm" method="post" onsubmit="return showSuccessMessage(event)">
            <div>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" required>
            </div>
            <div>
                <label for="senha">Senha</label>
                <input type="password" name="senha" id="senha" required>
            </div>
            <div>
                <button type="submit">Logar</button>
            </div>
            <p>
                Você não tem cadastro? <a href="/cadastro">Clique aqui!</a>
            </p>
        </form>
    </main>

    <script>
        // Função JavaScript para mostrar a mensagem de sucesso após o login
        function showSuccessMessage(event) {
            event.preventDefault();  // Impede o envio do formulário (não envia para o servidor)

            // Exibe a mensagem de sucesso
            const successMessage = document.getElementById("successMessage");
            successMessage.style.display = "block"; 

            // Limpa os campos do formulário
            document.getElementById("loginForm").reset(); 

            // Redireciona para a página desejada após 2 segundos
            setTimeout(function() {
                window.location.href = "/admin/produto/lst";  // Substitua "/pagina-principal" pela URL da página que deseja redirecionar
            }, 2000); // Redirecionamento após 2 segundos
        }
    </script>
</body>

</html>