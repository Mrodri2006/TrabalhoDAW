<%- include('../cabecalho.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Jogador</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <h1><i class="fas fa-edit"></i> Edição de jogadores</h1>
    <div class="container">
        <form method="post" enctype="multipart/form-data">
            <label for="nome"><i class="fas fa-tshirt"></i> Nome:</label>
            <input type="text" id="nome" name="nome" value="<%= Jogador.nome %>" required placeholder="Digite o nome">
            
            <label for="camisa"><i class="fas fa-hashtag"></i> Camisa:</label>
            <input min="1" max ="99" type="number" id="camisa" name="camisa" value="<%= Jogador.camisa %>" required placeholder="Número da camisa"> 

            <label for="time"><i class="fas fa-landmark"></i> Time:</label>
            <select id="time" name="time" class="form-control">
        <%Times.forEach(function(time){%>
          <option value='<%=time.id%>'> <%=time.nome%> </option>
          <%})%>
          <img src="/imagem/<%=Jogador.foto%>" class="foto"/>
          <label for="escudo">Foto:</label>
          <input type="file" id="foto" name="foto" >
      </select>

            <label for="posicao"><i class="fas fa-map-marker-alt"></i> Posição:</label>
            <select id="posicao" name="posicao" required>
                <option value="">Selecione a posição</option>
                <option value="Atacante" <%= Jogador.posicao === "Atacante" ? "selected" : "" %>>Atacante (Ata)</option>
                <option value="Meio-Campo" <%= Jogador.posicao === "Meio-Campo" ? "selected" : "" %>>Meio-Campo (Mei)</option>
                <option value="Defensor" <%= Jogador.posicao === "Defensor" ? "selected" : "" %>>Defensor (Def)</option>
                <option value="Goleiro" <%= Jogador.posicao === "Goleiro" ? "selected" : "" %>>Goleiro (Gol)</option>
            </select>

            <button type="submit" class="btn"><i class="fas fa-save"></i> Efetuar Edição</button>
        </form>
    </div>
</body>

</html>
