<%- include('../cabecalho.ejs') %>

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Melhorar Elenco</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>

  <body>
    <form action="" method="post" enctype="multipart/form-data">
      <h1><i class="fas fa-users"></i> Melhorar Elenco</h1>

      <label for="nome"><i class="fas fa-user icon"></i> Nome</label>
      <input type="text" id="nome" name="nome" placeholder="Digite o nome" required>

      <label for="camisa"><i class="fas fa-ruler-vertical icon"></i> Número da Camisa</label>
      <input min="1" max="99" type="number" id="camisa" name="camisa" placeholder="Digite o número da camisa" required>

      <label for="time"><i class="fas fa-weight icon"></i> Time</label>
      <select id="time" name="time" class="form-control">
        <option value="">selecione</option>
        <%Times.forEach(function(time){%>
          <option value='<%=time.id%>'> <%=time.nome%> </option>
          <%})%>
      </select>

      <label for="posicao"><i class="fas fa-map-marker-alt icon"></i> Posição</label>
      <select id="posicao" name="posicao" required>
        <option value="">Selecione a posição</option>
        <option value="Atacante">Atacante (Ata)</option>
        <option value="Meio-Campo">Meio-Campo (Mei)</option>
        <option value="Defensor">Defensor (Def)</option>
        <option value="Goleiro">Goleiro (Gol)</option>
      </select>

      <label for="foto"> Foto</label>
      <input  type="file" id="foto" name="foto" >

      <button type="submit"><i class="fas fa-plus icon"></i> Melhorar Elenco!</button>
    </form>
  </body>

  </html>